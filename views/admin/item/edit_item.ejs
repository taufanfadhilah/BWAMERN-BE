<div class="tab-pane fade show active" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" value="<%= item.title %>" placeholder="Enter title" required>
                </div>
                <div class="form-group">
                    <label for="title">Price</label>
                    <input type="number" class="form-control" name="price" value="<%= item.price %>" placeholder="Enter price" required>
                </div>
                <div class="form-group">
                    <label for="title">City</label>
                    <input type="text" class="form-control" name="city" value="<%= item.city %>" placeholder="Enter city" required>
                </div>
                <div class="form-group">
                    <label for="title">Category</label>
                    <select name="categoryId" id="" class="form-control">
                        <option value="<%= item.categoryId._id %>"><%= item.categoryId.name %></option>
                        <% for(let i = 0; i < category.length; i++){ %>
                            <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="title">Image</label>
                    <input type="file" class="form-control" name="image" multiple>
                </div>
                <div class="form-group">
                    <label for="title">Description</label>
                    <textarea id="editor" name="description"><%= item.description %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>